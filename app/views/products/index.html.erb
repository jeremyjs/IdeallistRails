<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Category</th>
      <th>Amazon url</th>
      <th>Small image url</th>
      <th>Medium image url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.isbn %></td>
        <td><%= product.title %></td>
        <td><%= product.author %></td>
        <td><%= product.price %></td>
        <td><%= product.category_id %></td>
        <td><%= product.amazon_url %></td>
        <td><%= product.small_image_url %></td>
        <td><%= product.medium_image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

