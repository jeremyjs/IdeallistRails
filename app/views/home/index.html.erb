<div class="container">
	<div class="jumbotron center">
     <h1>Welcome to your Ideal List</h1>
  </div>
  <div class="row">
    <%= @products.each do |item| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= image_tag item.medium_image_url %>
          <div class="caption">
            <h3><%= item.title %> - <%= item.fprice %></h3>
            <p><a href="<%= item.amazon_url %>" class="btn btn-primary" role="button">Buy Now!</a> <a href="#" class="btn btn-default" role="button">Remove</a></p>
          </div>
        </div>
      </div>
    <% end %>
	</div>
</div>